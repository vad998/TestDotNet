@model HomeViewModel

<table class="table table-striped table-hover d-none d-md-table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Должность</th>
            <th scope="col">Зарплата</th>
            <th scope="col">Город</th>
            <th scope="col">Время отъезда</th>
            <th scope="col">Время приезда</th>
            <th scope="col">Изменить</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var trip in Model.BusinessTrips)
            {
                <tr>
                    <td>@trip.Employee.firstName</td>
                    <td>@trip.Employee.lastName</td>
                    <td>@trip.Employee.Position.positionName</td>
                    <td>@trip.Employee.Position.salary</td>
                    <td>@trip.city</td>
                    <td>@trip.departureDate.ToString("dd.mm.yyyy")</td>
                    <td>@trip.arrivalDate.ToString("dd.mm.yyyy")</td>
                    <td><a href="Home/SaveBusinessTrip/{@trip}">Изменить</a></td>
                    <td><a href="Home/DeleteBusinessTrip/{@trip.id}">Удалить</a></td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="d-flex justify-content-center d-md-none">
    <ul class="list-group list-group-flush">
        @{
            foreach (var trip in Model.BusinessTrips)
            {
                <li class="list-group-item d-flex">
                    <ul>
                        <li>Имя</li>
                        <li>Фамилия</li>
                        <li>Должность</li>
                        <li>Зарплата</li>
                        <li>Город</li>
                        <li>Время отъезда</li>
                        <li>Время приезда</li>
                        <li><a href="Home/SaveBusinessTrip/{@trip}">Изменить</a></li>
                    </ul>
                    <ul>
                        <li>@trip.Employee.firstName</li>
                        <li>@trip.Employee.lastName</li>
                        <li>@trip.Employee.Position.positionName</li>
                        <li>@trip.Employee.Position.salary</li>
                        <li>@trip.city</li>
                        <li>@trip.departureDate.ToString("dd.mm.yyyy")</li>
                        <li>@trip.arrivalDate.ToString("dd.mm.yyyy")</li>
                        <li><a href="Home/DeleteBusinessTrip/{@trip.id}">Удалить</a></li>
                    </ul>
                </li>
            }
        }
    </ul>
</div>

<div>
    <button type="button" data-toggle="ajax-modal" data-target="#editTrip">Добавить</button>
</div>

<div class="modal fade" id="editTrip">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Business Trip</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
        </div>
    </div>
</div>